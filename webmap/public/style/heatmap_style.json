{
  "version": 8,
  "name": "Empty Style",
  "sources": {
    "pneuma": {
      "type": "vector",
      "promoteId": "vehicle_id",
      "tilesDev": ["http://localhost/trajectories/{z}/{x}/{y}"],
      "tilesProd": ["https://pneuma-dev.epfl.ch/tiles/trajectories/{z}/{x}/{y}"],
      "url": "pmtiles://https://enacit4r-cdn.epfl.ch/pneuma/trajectories.pmtiles",
      "minzoom": 14,
      "maxzoom": 19
    },
    "heatmap": {
      "type": "vector",
      "promoteId": "hex_id",
      "tilesProd": ["https://pneuma-dev.epfl.ch/tiles/speed_hexmap/{z}/{x}/{y}"],
      "tilesDev": ["http://localhost/speed_hexmap/{z}/{x}/{y}"],
      "url": "pmtiles://https://enacit4r-cdn.epfl.ch/pneuma/speed_hexmap.pmtiles",
      "minzoom": 14,
      "maxzoom": 19
    },
    "background": {
      "tileSize": 256,
      "tiles": ["https://tile.osm.ch/osm-swiss-style/{z}/{x}/{y}.png"],
      "type": "raster",
      "maxzoom": 19
    },
    "osm": {
      "type": "geojson",
      "data": "https://enacit4r-cdn.epfl.ch/pneuma/data_osm.geojson"
    }
  },
  "sprite": "https://enacit4r-cdn.epfl.ch/pneuma/sprites/sprite",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "raster",
      "source": "background",
      "paint": {
        "raster-saturation": -0.9,
        "raster-brightness-min": 0.7
      }
    },
    {
      "id": "trajectories",
      "type": "line",
      "source": "pneuma",
      "source-layer": "trajectories",
      "layout": {
        "visibility": "visible"
      },
      "filter": ["!=", ["get", "id"], "0"],
      "line-cap": "round",
      "paint": {
        "line-color": [
          "interpolate",
          ["linear"],
          ["to-number", ["get", "speed"]],
          -1,
          "#CCCCCC",
          0,
          "#440154",
          9,
          "#482878",
          18,
          "#3e4989",
          27,
          "#31688e",
          36,
          "#26828e",
          45,
          "#1f9e89",
          54,
          "#35b779",
          63,
          "#6ece58",
          72,
          "#b5de2b",
          80,
          "#fde725"
        ],
        "line-width": ["case", ["boolean", ["feature-state", "hover"], false], 6, 2],
        "line-opacity": ["case", ["boolean", ["feature-state", "hover"], false], 1, 0.1]
      }
    },
    {
      "id": "speed-heatmap",
      "type": "fill",
      "source": "heatmap",
      "source-layer": "speed_hexmap",
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "fill-opacity": 0.8,
        "fill-color": [
          "interpolate",
          ["linear"],
          ["to-number", ["get", "speed_1"]],
          -1,
          "#CCCCCC",
          0,
          "#440154",
          5,
          "#482878",
          10,
          "#3e4989",
          20,
          "#31688e",
          30,
          "#26828e",
          40,
          "#1f9e89",
          50,
          "#35b779",
          60,
          "#6ece58",
          70,
          "#b5de2b",
          80,
          "#fde725"
        ]
      }
    },
    {
      "id": "freq-heatmap",
      "type": "fill",
      "source": "heatmap",
      "source-layer": "speed_hexmap",
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "fill-opacity": 0.8,
        "fill-color": [
          "interpolate",
          ["linear"],
          ["/", ["to-number", ["get", "freq_1"]], ["to-number", ["get", "area"]]],
          -1,
          "#CCCCCC",

          0,
          "#002051",
          0.3,
          "#2b446e",
          0.6,
          "#696970",
          0.9,
          "#948f78",
          1.2,
          "#caba6a",
          1.5,
          "#fdea45"
        ]
      }
    },

    {
      "id": "traffic_signals",
      "type": "symbol",
      "source": "osm",
      "minzoom": 16,
      "filter": ["==", ["get", "highway"], "traffic_signals"],
      "layout": {
        "icon-image": "Traffic_light-16",
        "icon-size": ["interpolate", ["exponential", 3], ["zoom"], 17, 1.2, 22, 8]
      }
    },
    {
      "id": "bus_stops",
      "type": "symbol",
      "source": "osm",
      "minzoom": 16,
      "filter": ["==", ["get", "highway"], "bus_stop"],
      "layout": {
        "icon-image": "Bus-stop-12",
        "icon-size": ["interpolate", ["exponential", 3], ["zoom"], 17, 1.2, 22, 8]
      }
    }
  ]
}
