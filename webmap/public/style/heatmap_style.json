{
  "version": 8,
  "name": "Empty Style",
  "sources": {
    "pneuma": {
      "type": "vector",
      "tiles": ["https://enacit4r-cdn.epfl.ch/pneuma/2023-05-05T135444Z/tiles/{z}/{x}/{y}.pbf"],
      "minZoom": 16,
      "maxZoom": 24
    },
    "background": {
      "maxzoom": 20,
      "tileSize": 256,
      "tiles": ["https://tiles.stadiamaps.com/tiles/alidade_smooth/{z}/{x}/{y}@2x.png"],
      "type": "raster"
    }
  },
  "sprite": "",
  "glyphs": "https://orangemug.github.io/font-glyphs/glyphs/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "raster",
      "source": "background",
      "maxzoom": 24,
      "paint": {
        "raster-opacity": {
          "base": 1.5,
          "stops": [
            [0, 0.6],
            [6, 0.6]
          ]
        }
      }
    },
    {
      "id": "heatmap",
      "type": "heatmap",
      "source": "pneuma",
      "source-layer": "data",
      "maxzoom": 24,
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "heatmap-intensity": ["interpolate", ["linear"], ["zoom"], 17, 0.2, 24, 2],
        "heatmap-color": [
          "interpolate",
          ["linear"],
          ["heatmap-density"],
          0,
          "rgba(33,102,172,0)",
          0.2,
          "rgb(103,169,207)",
          0.4,
          "rgb(209,229,240)",
          0.6,
          "rgb(253,219,199)",
          0.8,
          "rgb(239,138,98)",
          1,
          "rgb(178,24,43)"
        ],
        "heatmap-radius": ["interpolate", ["linear"], ["zoom"], 17, 10, 24, 50]
      }
    },
    {
      "id": "ghost",
      "type": "circle",
      "source": "pneuma",
      "source-layer": "data",
      "layout": {
        "visibility": "none"
      },
      "paint": {
        "circle-color": "grey",
        "circle-opacity": 0.3,
        "circle-stroke-color": "transparent"
      }
    },
    {
      "id": "vehicles",
      "type": "circle",
      "source": "pneuma",
      "source-layer": "data",
      "layout": {
        "visibility": "visible"
      },
      "paint": {
        "circle-color": [
          "interpolate-hcl",
          ["linear"],
          ["to-number", ["get", "speed"]],
          0,
          "red",
          10,
          "yellow",
          50,
          "green"
        ],
        "circle-opacity": 0.7,
        "circle-stroke-color": "rgba(0,0,0,0.2)"
      }
    }
  ]
}
